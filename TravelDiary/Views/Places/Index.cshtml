@using TravelDiary.Models;

<h1>Travel Diary</h1>
@if (Model.Count == 0)
{
  <p>You haven't traveled anywhere yet!</p>
}
<ul>
  @foreach (Place place in Model)
  {
    <li><a href='/places/@place.Id'>@place.CityName</a></li>
  }
</ul>
<a href="/places/new">Click here to add a place to your travel diary</a>

<form action="/places/delete" method="post">
  <button type="submit">Delete all places from travel diary</button>
</form>